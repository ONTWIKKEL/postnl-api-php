{
  "name": "firstred/postnl-api-php",
  "description": "PostNL PHP API Client",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael Dekker",
      "email": "git@michaeldekker.nl"
    }
  ],
  "scripts": {
    "install:phpcs": "vendor/bin/phpcs --config-set installed_paths vendor/escapestudios/symfony2-coding-standard",
    "phpcs": "vendor/bin/phpcs --standard=Symfony --extensions=php src/ Tests/",
    "phpcs:src": "vendor/bin/phpcs --standard=Symfony --extensions=php src/",
    "phpcs:tests": "vendor/bin/phpcs --standard=Symfony --extensions=php Tests/",
    "phpcbf": "vendor/bin/phpcbf --standard=Symfony --extensions=php src/ Tests/",
    "phpcbf:src": "vendor/bin/phpcbf --standard=Symfony --extensions=php src/",
    "phpcbf:tests": "vendor/bin/phpcbf --standard=Symfony --extensions=php Tests/",
    "test": "vendor/bin/phpunit --testdox",
    "test:unit": "vendor/bin/phpunit --testdox --testsuite unit",
    "test:integration": "vendor/bin/phpunit --testdox --testsuite integration"
  },
  "require": {
    "php": "7.1 - 7.3",
    "ext-json": "*",
    "ext-mbstring": "*",
    "psr/cache": "^1.0.1",
    "psr/log": "^1.1.0",
    "psr/http-message-implementation": "^1.0",
    "php-http/async-client-implementation": "^1.0",
    "php-http/client-common": "^1.5|^2.0",
    "php-http/discovery": "^1.6.1",
    "php-http/httplug": "^1.1|^2.0",
    "php-http/message": "^1.5",
    "php-http/logger-plugin": "^1.1",
    "setasign/fpdi-fpdf": "^2.2.0",
    "giggsey/libphonenumber-for-php": "^8.10"
  },
  "require-dev": {
    "php-http/mock-client": "^1.3.0",
    "nyholm/psr7": "^1.1.0",
    "phpunit/phpunit": "^7.5.2",
    "wappr/logger": "^1.2.0",
    "cache/void-adapter": "^1.0.0",
    "squizlabs/php_codesniffer": "^3.4",
    "escapestudios/symfony2-coding-standard": "3.x-dev",
    "vlucas/phpdotenv": "^3.2"
  },
  "suggest": {
    "giggsey/libphonenumber-for-php": "Auto format phone numbers and increase acceptance by the PostNL API"
  },
  "autoload": {
    "psr-4": {
      "Firstred\\PostNL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Firstred\\PostNL\\Tests\\": "Tests/"
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "composer phpcs"
      ],
      "pre-push": [
        "composer test:unit"
      ]
    }
  }
}
