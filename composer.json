{
  "name": "firstred/postnl-api-php",
  "description": "PostNL PHP API Client",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael Dekker",
      "email": "git@michaeldekker.nl"
    }
  ],
  "scripts": {
    "phpcs": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist --dry-run src tests",
    "phpcs:src": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist --dry-run src",
    "phpcs:tests": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist --dry-run tests",
    "phpcs:fix": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist src tests",
    "phpcs:fix:src": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist src",
    "phpcs:fix:tests": "vendor/bin/php-cs-fixer fix  --config=.php_cs.dist tests",
    "test": "vendor/bin/phpunit --testdox",
    "test:unit": "vendor/bin/phpunit --testdox --testsuite unit",
    "test:integration": "vendor/bin/phpunit --testdox --testsuite integration"
  },
  "require": {
    "php": "^7.1.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "psr/cache": "^1.0.1",
    "psr/container": "^1.0.0",
    "psr/http-client": "^1.0.0",
    "psr/http-message-implementation": "^1.0.0",
    "psr/log": "^1.1.0",
    "php-http/async-client-implementation": "^1.0.0",
    "php-http/client-common": "^2.1.0",
    "php-http/discovery": "^1.7.4",
    "php-http/httplug": "^2.1.0",
    "php-http/message": "^1.8.0",
    "php-http/logger-plugin": "^1.1.0",
    "php-http/cache-plugin": "^1.7.0",
    "php-http/stopwatch-plugin": "^1.3.0",
    "setasign/fpdf": "^1.8.2",
    "setasign/fpdi": "^2.3.3",
    "symfony/serializer": "^4.4.0 || ^5.0.0",
    "symfony/property-access": "^4.4.0 || ^5.0.0"
  },
  "require-dev": {
    "cache/void-adapter": "^1.0.0",
    "friendsofphp/php-cs-fixer": "^2.16.3",
    "giggsey/libphonenumber-for-php": "^8.12.4",
    "guzzlehttp/promises": "^1.3.1",
    "league/iso3166": "^2.1.5",
    "nyholm/psr7": "^1.1.0",
    "php-di/php-di": "^6.1",
    "php-http/mock-client": "^1.3.1",
    "phpunit/phpunit": "^7.5.20",
    "symfony/console": "^5.0.8",
    "symfony/dotenv": "^5.0.8",
    "symfony/http-client": "^5.0.8",
    "symfony/var-dumper": "^5.0.8",
    "symfony/config": "^4.4.0 || ^5.0.0",
    "symfony/dependency-injection": "^4.4.0 || ^5.0.0",
    "wappr/logger": "^1.2.0"
  },
  "suggest": {
    "giggsey/libphonenumber-for-php": "Automatically format phone numbers and increase acceptance by the PostNL API",
    "league/iso3166": "Automatically convert between ISO 3166-1 alpha-2 (2 letter) and ISO 3166-1 alpha-3 (3 letter) country codes"
  },
  "autoload": {
    "psr-4": {
      "Firstred\\PostNL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Firstred\\PostNL\\Tests\\": "tests/"
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "composer phpcs"
      ],
      "pre-push": [
        "composer test:unit"
      ]
    }
  }
}
